import numpy as np
import matplotlib.pyplot as plt
from scipy.ndimage import gaussian_filter
from PIL import Image

# Step 1: Load the image
image_path = r"/Users/apple/Desktop/one.png"
print(f"Loading image from: {image_path}")  # Debugging line
try:
    image = Image.open(image_path).convert('L')  # Convert to grayscale ('L' = 8-bit grayscale)
except FileNotFoundError:
    print(f"Error: The file at {image_path} was not found.")
    exit()

# Step 2: Convert image to numpy array
image_array = np.array(image)

# Step 3: Apply Gaussian filter
smoothed_image = gaussian_filter(image_array, sigma=2)

# Step 4: Display both images
plt.figure(figsize=(10, 5))  # Optional: Set figure size
plt.subplot(1, 2, 1)
plt.title("Original Image")
plt.imshow(image_array, cmap='gray')
plt.axis('off')  # Hide axes

plt.subplot(1, 2, 2)
plt.title("Smoothed Image")
plt.imshow(smoothed_image, cmap='gray')
plt.axis('off')  # Hide axes

plt.show()
